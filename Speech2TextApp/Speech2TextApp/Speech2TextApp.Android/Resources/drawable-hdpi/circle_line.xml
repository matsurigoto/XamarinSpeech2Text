<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <item
      android:height="2dp"
      android:gravity="center">
    <shape android:shape="rectangle">
      <solid android:color="#4A90E2" />
    </shape>
  </item>

  <item
      android:width="18dp"
      android:height="18dp"
      android:gravity="center_vertical">
    <shape android:shape="oval">
      <solid android:color="#FFFFFF" />
      <stroke
        android:width="2dp"
        android:color="@color/form_color_blue" />
    </shape>
  </item>

  <item
      android:width="18dp"
      android:height="18dp"
      android:left="70dp"
      android:gravity="center_vertical">
    <shape android:shape="oval">
      <solid android:color="#FFFFFF" />
      <stroke
        android:width="2dp"
        android:color="@color/form_color_blue" />
    </shape>
  </item>

  <item
    android:width="18dp"
    android:height="18dp"
    android:gravity="center">
    <shape android:shape="oval">
      <solid android:color="#FFFFFF" />
      <stroke
        android:width="2dp"
        android:color="@color/form_color_blue" />
    </shape>
  </item>

  <item
    android:width="18dp"
    android:height="18dp"
    android:left="210dp"
    android:gravity="center_vertical">
    <shape android:shape="oval">
      <solid android:color="#FFFFFF" />
      <stroke
        android:width="2dp"
        android:color="@color/form_color_blue" />
    </shape>
  </item>

  <item
    android:width="18dp"
    android:height="18dp"
    android:gravity="center_vertical|right">
    <shape android:shape="oval">
      <solid android:color="#FFFFFF" />
      <stroke
        android:width="2dp"
        android:color="@color/form_color_blue" />
    </shape>
  </item>
  



</layer-list>